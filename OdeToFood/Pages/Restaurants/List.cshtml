@page
@model OdeToFood.Pages.Restaurants.ListModel
@{
    ViewData["Title"] = "Restaurants";
}

<h1>Restaurants</h1>



<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Search..." asp-for="SearchTerm">
            <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="submit">Search</button>
            </div>
        </div>
    </div>
</form>



    @foreach (var restaurant in Model.Restaurants)
    {
        <partial name="_Summary" model="restaurant" />
    }


<a asp-page=".\Edit" class="btn btn-primary">Add New</a>

<br />
<br />

@section footer  {
    <b>@Model.Message</b>
}

